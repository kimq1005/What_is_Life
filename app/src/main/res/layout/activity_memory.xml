<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.memory.MemoryActivity">


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <Button
          android:text="왜안댐?"
          android:background="@drawable/button_selector"
          android:layout_width="match_parent"
          android:textColor="@drawable/text_selector"
          android:layout_height="wrap_content"/>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_funding_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/main_funding_image">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_marginLeft="24dp"
              android:layout_marginBottom="16dp"
              android:gravity="center_vertical"
              android:orientation="vertical">

            <TextView
                android:id="@+id/main_funding_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Store"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_funding_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추억하라고 했다"
                android:textColor="#B7FFFFFF"
                android:textSize="16sp" />

          </LinearLayout>

        </RelativeLayout>

      </RelativeLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="Your memories"
          android:textColor="@color/black"
          android:textSize="24sp"
          android:textStyle="bold" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/memoriesRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="400dp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="With memories"
          android:textColor="@color/black"
          android:textSize="24sp"
          android:textStyle="bold" />


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <androidx.appcompat.widget.AppCompatButton
              android:layout_margin="10dp"
              android:layout_width="170dp"
              android:layout_height="170dp">






          </androidx.appcompat.widget.AppCompatButton>


          <androidx.cardview.widget.CardView
              android:layout_margin="10dp"
              android:layout_width="170dp"
              android:layout_height="170dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <ImageView
                  android:src="@drawable/ic_baseline_person_24"
                  android:layout_width="100dp"
                  android:layout_height="100dp"/>

              <TextView
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:text="작성하기"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>


            </LinearLayout>





          </androidx.cardview.widget.CardView>



        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <androidx.cardview.widget.CardView
              android:layout_margin="10dp"
              android:layout_width="170dp"
              android:layout_height="170dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <ImageView
                  android:src="@drawable/ic_baseline_person_24"
                  android:layout_width="100dp"
                  android:layout_height="100dp"/>

              <TextView
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:text="작성하기"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>


            </LinearLayout>



          </androidx.cardview.widget.CardView>


          <androidx.cardview.widget.CardView
              android:layout_margin="10dp"
              android:layout_width="170dp"
              android:layout_height="170dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <ImageView
                  android:src="@drawable/ic_baseline_person_24"
                  android:layout_width="100dp"
                  android:layout_height="100dp"/>

              <TextView
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:text="작성하기"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>


            </LinearLayout>



          </androidx.cardview.widget.CardView>



        </LinearLayout>










      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="16dp"
          android:text="우오오오"
          android:textColor="@color/black"
          android:textSize="24sp"
          android:textStyle="bold" />


    </LinearLayout>
  </ScrollView>


  </LinearLayout>